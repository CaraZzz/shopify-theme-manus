<section class="featured-collections" id="featured-collections">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Explore Our Collections</h2>
      <p class="section-subtitle">Discover curated sets of charms for every personality and intention.</p>
    </div>

    <div class="featured-collections__grid">
      {%- for collection in collections -%}
        {%- if forloop.index > 4 %}{% break %}{% endif -%}
        <a href="{{ collection.url }}" class="featured-collection-card animate-on-scroll">
          <div class="featured-collection-card__image">
            {%- if collection.image -%}
              <img src="{{ collection.image | image_url: width: 400 }}" alt="{{ collection.title | escape }}" loading="lazy">
            {%- else -%}
              <div class="featured-collection-card__placeholder">
                <span>{{ collection.title }}</span>
              </div>
            {%- endif -%}
          </div>
          <div class="featured-collection-card__content">
            <h3 class="featured-collection-card__title">{{ collection.title }}</h3>
            <p class="featured-collection-card__description">{{ collection.description | truncate: 100 }}</p>
            <span class="btn btn--secondary">Shop Now</span>
          </div>
        </a>
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
  .featured-collections {
    padding: 6rem 0;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-title {
    font-size: 3.2rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .section-subtitle {
    font-size: 1.8rem;
    color: var(--color-text);
    opacity: 0.8;
    max-width: 600px;
    margin: 0 auto;
  }

  .featured-collections__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 3rem;
  }

  .featured-collection-card {
    background-color: white;
    border-radius: 1.5rem;
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(44, 44, 44, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    text-decoration: none;
    color: var(--color-text);
  }

  .featured-collection-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(44, 44, 44, 0.15);
  }

  .featured-collection-card__image {
    height: 250px;
    overflow: hidden;
  }

  .featured-collection-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .featured-collection-card:hover .featured-collection-card__image img {
    transform: scale(1.05);
  }

  .featured-collection-card__placeholder {
    width: 100%;
    height: 100%;
    background-color: var(--color-accent);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    font-weight: 600;
    color: var(--color-text);
  }

  .featured-collection-card__content {
    padding: 2rem;
  }

  .featured-collection-card__title {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .featured-collection-card__description {
    font-size: 1.4rem;
    line-height: 1.5;
    margin-bottom: 1.5rem;
    opacity: 0.8;
  }

  .featured-collection-card .btn {
    width: 100%;
  }
</style>

{% schema %}
{
  "name": "Featured Collections",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Explore Our Collections"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Discover curated sets of charms for every personality and intention."
    },
    {
      "type": "range",
      "id": "collections_to_show",
      "label": "Number of collections to show",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 4
    }
  ],
  "presets": [
    {
      "name": "Featured Collections"
    }
  ]
}
{% endschema %}

