{%- liquid
  assign hero_image = section.settings.hero_image | default: settings.hero_image
  assign hero_title = section.settings.hero_title | default: settings.hero_title
  assign hero_subtitle = section.settings.hero_subtitle | default: settings.hero_subtitle
  assign hero_button_text = section.settings.hero_button_text | default: settings.hero_button_text
  assign hero_button_link = section.settings.hero_button_link | default: settings.hero_button_link
-%}

<section class="hero" id="hero">
  <div class="hero__background">
    {%- if hero_image != blank -%}
      <img
        src="{{ hero_image | image_url: width: 1920 }}"
        alt="{{ hero_image.alt | escape }}"
        class="hero__background-image"
        loading="lazy"
      >
    {%- endif -%}
    <div class="hero__overlay"></div>
  </div>

  <div class="container">
    <div class="hero__content">
      <div class="hero__text">
        {%- if hero_title != blank -%}
          <h1 class="hero__title animate-on-scroll">{{ hero_title }}</h1>
        {%- endif -%}
        
        {%- if hero_subtitle != blank -%}
          <p class="hero__subtitle animate-on-scroll">{{ hero_subtitle }}</p>
        {%- endif -%}
        
        <div class="hero__actions animate-on-scroll">
          {%- if hero_button_link != blank and hero_button_text != blank -%}
            <a href="{{ hero_button_link }}" class="btn btn--primary btn--large hero__cta">
              {{ hero_button_text }}
            </a>
          {%- endif -%}
          
          <a href="#featured-collections" class="btn btn--secondary btn--large hero__explore">
            Explore Collections
          </a>
        </div>
      </div>

      <div class="hero__visual animate-on-scroll">
        <div class="hero__product-showcase">
          <div class="hero__keychain hero__keychain--1">
            <img src="{{ 'hero_keychain_1.png' | asset_url }}" alt="Customizable Keychain" loading="lazy">
          </div>
          <div class="hero__keychain hero__keychain--2">
            <img src="{{ 'hero_keychain_2.png' | asset_url }}" alt="Energy Stone Charms" loading="lazy">
          </div>
          <div class="hero__keychain hero__keychain--3">
            <img src="{{ 'hero_keychain_3.png' | asset_url }}" alt="Sport Charms" loading="lazy">
          </div>
        </div>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="hero__scroll-indicator">
      <div class="hero__scroll-text">Discover Your Story</div>
      <div class="hero__scroll-arrow">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
          <path d="M7 13L12 18L17 13M7 6L12 11L17 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    background: linear-gradient(135deg, var(--color-secondary) 0%, var(--color-accent) 100%);
    overflow: hidden;
  }

  .hero__background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1;
  }

  .hero__background-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(247, 245, 243, 0.9) 0%, rgba(232, 213, 196, 0.8) 100%);
  }

  .hero .container {
    position: relative;
    z-index: 2;
  }

  .hero__content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    min-height: 80vh;
  }

  .hero__title {
    font-size: 4.8rem;
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    color: var(--color-text);
    font-family: var(--font-heading-family);
  }

  .hero__subtitle {
    font-size: 2rem;
    line-height: 1.5;
    margin-bottom: 2.5rem;
    color: var(--color-text);
    opacity: 0.8;
  }

  .hero__actions {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .hero__visual {
    position: relative;
    height: 500px;
  }

  .hero__product-showcase {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .hero__keychain {
    position: absolute;
    border-radius: 1.5rem;
    box-shadow: 0 8px 32px rgba(44, 44, 44, 0.15);
    transition: transform 0.6s ease;
  }

  .hero__keychain img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 1.5rem;
  }

  .hero__keychain--1 {
    top: 0;
    left: 0;
    width: 200px;
    height: 250px;
    animation: float 6s ease-in-out infinite;
  }

  .hero__keychain--2 {
    top: 100px;
    right: 50px;
    width: 180px;
    height: 220px;
    animation: float 6s ease-in-out infinite 2s;
  }

  .hero__keychain--3 {
    bottom: 50px;
    left: 80px;
    width: 160px;
    height: 200px;
    animation: float 6s ease-in-out infinite 4s;
  }

  .hero__scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
    color: var(--color-text);
    opacity: 0.7;
  }

  .hero__scroll-text {
    font-size: 1.4rem;
    margin-bottom: 0.5rem;
    font-weight: 500;
  }

  .hero__scroll-arrow {
    animation: bounce 2s infinite;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-20px) rotate(2deg);
    }
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-10px);
    }
    60% {
      transform: translateY(-5px);
    }
  }

  @media screen and (max-width: 768px) {
    .hero {
      min-height: 90vh;
    }

    .hero__content {
      grid-template-columns: 1fr;
      gap: 3rem;
      text-align: center;
    }

    .hero__title {
      font-size: 3.2rem;
    }

    .hero__subtitle {
      font-size: 1.8rem;
    }

    .hero__actions {
      justify-content: center;
    }

    .hero__visual {
      height: 300px;
      order: -1;
    }

    .hero__keychain--1 {
      width: 120px;
      height: 150px;
      left: 20px;
    }

    .hero__keychain--2 {
      width: 100px;
      height: 130px;
      right: 20px;
      top: 50px;
    }

    .hero__keychain--3 {
      width: 90px;
      height: 120px;
      left: 50%;
      transform: translateX(-50%);
      bottom: 20px;
    }
  }

  @media screen and (max-width: 480px) {
    .hero__actions {
      flex-direction: column;
      align-items: center;
    }

    .btn {
      width: 100%;
      max-width: 280px;
    }
  }
</style>

{% schema %}
{
  "name": "Hero Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "hero_title",
      "label": "Title",
      "default": "Express Your Authentic Self"
    },
    {
      "type": "textarea",
      "id": "hero_subtitle",
      "label": "Subtitle",
      "default": "Customizable keychains that tell your unique story. Each charm represents a piece of who you are."
    },
    {
      "type": "text",
      "id": "hero_button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "hero_button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}

